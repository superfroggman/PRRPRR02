                <Image Source="GFX/git.png"/>
            </Button>
            <Button Grid.Column="1">
                <Image Source="GFX/git.png"/>
            </Button>
            <Button Grid.Column="2">
                <Image Source="GFX/git.png"/>
            </Button>
        </Grid>
